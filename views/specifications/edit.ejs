<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edit Specification</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/equipment/<%=equipment_id%>/specifications/<%=specification._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=specification.name%>" name="specification[name]">
                <input class="form-control" type="text" value="<%=specification.value%>" name="specification[value]">
                <input class="form-control" type="text" value="<%=specification.unit%>" name="specification[unit]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>
        </form>
        <a href="/equipment/<%=equipment_id%>">Back</a>
    </div>
</div>

<% include ../partials/footer %>